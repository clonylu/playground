sudo apt-get update 
sudo apt-get install man -y
sudo apt-get install libc6:i386 libstdc++6:i386 -y
sudo apt-get install rlwrap

pip install --user pydevd
pip install --user behave==1.2.5

touch ~/.INIT_SUCCESS
